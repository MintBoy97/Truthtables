<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="10sp"
    tools:context="organicwaves.truthtables.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/lblFunction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_weight="1"
            android:hint="@string/text_hint"
            android:maxLength="30"
            android:textColor="@color/colorText"
            android:textSize="18sp"/>

        <ImageButton
            android:id="@+id/btnEraseCharacter"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20sp"
            android:background="@color/colorBackground"
            android:scaleType="fitStart"
            android:src="@drawable/deletecharacter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblVariables"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_weight="1"
            android:text="@string/text_numberOfVariables"
            android:textColor="@color/colorText"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spnNumberOfVariables"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20sp"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/OpAnd"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:background="@color/colorPrimary"
                android:text="AND"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />

            <Button
                android:id="@+id/OpNand"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:background="@color/colorPrimary"
                android:text="NAND"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnA"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:background="@color/colorOperand"
                android:text="A"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnB"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:background="@color/colorOperand"
                android:text="B"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/OpOr"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:background="@color/colorPrimary"
                android:text="OR"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />

            <Button
                android:id="@+id/OpNor"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:background="@color/colorPrimary"
                android:text="NOR"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnC"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:background="@color/colorOperand"
                android:text="C"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnD"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:background="@color/colorOperand"
                android:text="D"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/OpXor"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:background="@color/colorPrimary"
                android:text="XOR"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />

            <Button
                android:id="@+id/OpXnor"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:background="@color/colorPrimary"
                android:text="XNOR"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnE"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:background="@color/colorOperand"
                android:text="E"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnF"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:background="@color/colorOperand"
                android:text="F"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/OpLeft"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:background="@color/colorPrimary"
                android:text="("
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />

            <Button
                android:id="@+id/OpRight"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:background="@color/colorPrimary"
                android:text=")"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnX"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:background="@color/colorOperand"
                android:text="X"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnY"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:background="@color/colorOperand"
                android:text="Y"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/OpNot"
                android:layout_width="157sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:background="@color/colorPrimary"
                android:text="NOT"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnZ"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:background="@color/colorOperand"
                android:text="Z"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnW"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:background="@color/colorOperand"
                android:text="W"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="157sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:background="@color/colorAccent"
                android:text="@string/button_clear"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnEvaluate"
                android:layout_width="157sp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="@string/button_solve"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>